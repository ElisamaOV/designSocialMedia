<!DOCTYPE html>
<html>
  <head>
    <%- include('./modules/links.ejs') %>
    <title>Welcome!</title>
  </head>
  <body>
    <%- include('./modules/navbar.ejs') %>
    <main class="align-content-center">
      <h1 class="text-center mb-5">Inicio de sesi√≥n</h1>
      <div class="container-xxl d-flex justify-content-center">
        <form class="w-50" action="/designer/login" method="post">
          <div class="row d-flex flex-column align-items-center">
            <div class="col-12 col-lg-8">
              <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input
                  type="email"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="emailHelp"
                  placeholder="Enter email"
                  name="email"
                />
              </div>
            </div>
            <div class="col-12 col-lg-8 mt-3">
              <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="exampleInputPassword1"
                  placeholder="Password"
                  name="password"
                />
              </div>
              <p class="pt-3 text-danger"><%= advice %></p>
            </div>
            <div class="col mt-4 text-center">
              <button class="btn btn-success">Log In</button>
              <button
                type="button"
                class="btn btn-secondary"
                onclick="window.location.href='/'"
              >
                Volver
              </button>
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include('./modules/footer.ejs') %>
  </body>
</html>
