<!DOCTYPE html>
<html>
  <head>
    <%- include('./modules/links.ejs') %>
    <link rel="stylesheet" href="/stylesheets/designer.css" />
    <title>Welcome!</title>
  </head>
  <body>
    <%- include('./modules/navbar.ejs') %>
    <main>
      <h1 class="text-center pt-5 pb-5">Perfil de diseñador</h1>
      <div class="container-xxl">
        <div class="row justify-content-center align-items-center">
          <div class="col-12 col-lg-5 d-flex justify-content-center">
            <div class="profile-card-2">
              <img
                src="/images/designers/<%= result1.img_designer ? result1.img_designer : 'default.jpg' %>"
                class="img img-fluid"
              />
              <div class="profile-name">
                <%= result1.name %> <%= result1.lastname %>
              </div>
              <div class="profile-city">Diseñador/a de <%= result1.city %></div>
            </div>
          </div>
          <div class="col-12 col-lg-7">
            <div class="designer-info-card p-4">
              <h2 class="mb-4">Información del diseñador</h2>
              <ul class="fs-5">
                <li>
                  <strong>Descripción:</strong> <%= result1.description %>
                </li>
                <li><strong>Procedencia:</strong> <%= result1.city %></li>
                <li><strong>Teléfono:</strong> <%= result1.phone %></li>
                <li><strong>Email:</strong> <%= result1.email %></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="row justify-content-center text-center">
          <div class="col-12 col-md-6">
            <button
              class="btn btn-success mt-5 mb-3"
              onclick="window.location.href='/designs/createDesign/<%= result1.id_designer %>'"
            >
              Añadir nuevo diseño
            </button>
            <button
              class="btn btn-secondary mt-5 mb-3"
              onclick="window.location.href='/designer/login'"
            >
              Volver
            </button>
          </div>
        </div>
      </div>
      <section class="section-1 mt-5">
        <h1 class="text-center">Diseños</h1>
        <div class="container-xxl">
          <div class="row">
            <% result2.forEach((elem) => { %>
            <div class="col-12 col-sm-6 col-lg-3 d-flex justify-content-center">
              <button
                onclick="window.location.href='/designs/showDesign/<%= elem.id_design %>'"
                class="bg-transparent border-0"
              >
                <div class="profile-card-2">
                  <img
                    src="/images/designs/<%= elem.img_designer ? elem.img_designer : 'default.jpg' %>"
                    class="img img-responsive"
                  />
                  <div class="profile-name"><%= elem.name %></div>
                </div>
              </button>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
    </main>
    <%- include('./modules/footer.ejs') %>
  </body>
</html>
